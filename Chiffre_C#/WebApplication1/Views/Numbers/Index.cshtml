<!DOCTYPE html>
<html ng-app="numberGameApp">

<head>
    <title>Number Game</title>
    <style>
        <style>.clock-container {
            position: relative;
            width: 200px;
            height: 200px;
        }

        #timer {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            font-size: 24px;
        }

        .form-container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .form-container form {
            flex: 1;
            margin: 0 10px;
        }

        .number-buttons,
        .operator-buttons {
            margin-top: 20px;
            text-align: center;
        }

        .number-buttons button,
        .operator-buttons button {
            margin: 5px;
            padding: 10px;
            font-size: 18px;
        }
    </style>
</head>

<body ng-controller="NumbersController">
    <h1>Number Game</h1>

    <p>Target Number:</p>
    <h4 id="target">{{ targetNumber }}</h4>

    <p>Numbers to use:</p>
    <ul>
        <li ng-repeat="number in randomNumbers">{{ number }}</li>
    </ul>

    <!-- Horloge circulaire -->
    <div class="clock-container">
        <div id="timer">00:20</div>
    </div>

    <div class="form-container">
        <form id="form1" action="" method="get">
            <input type="number" name="j1" id="j1">
            <input type="submit" id="bouton1" value="Joueur 1">
        </form>
        <form id="form2" action="" method="get">
            <input type="number" name="j2" id="j2">
            <input type="submit" id="bouton2" value="Joueur 2">
        </form>
    </div>
    <div id="dynamic-elements"></div>
    <script src="/js/angular-1.8.2/angular.min.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/script.js"></script>
</body>

</html>
